---
export interface Props {
  activeNav?: "posts" | "tags" | "";
}
const { activeNav } = Astro.props;
const active = "underline decoration-wavy decoration-2 underline-offset-4";
import Hr from "@components/Hr.astro";
---

<header class="mx-auto mt-4 w-full" transition:persist>
  <nav class="mb-2 flex w-full content-end">
    <ul
      class="display-none flex w-full flex-col items-center justify-center sm:flex sm:flex-row sm:justify-end"
    >
      <li class="flex items-center justify-center">
        <a
          href={`/blog/1`}
          class="text-lg text-text dark:text-text-dark"
          class:list={[
            `${
              activeNav === "posts"
                ? "underline decoration-wavy decoration-2 underline-offset-4"
                : ""
            }`,
          ]}
        >
          Posts
        </a>
      </li>
      <li class="flex items-center justify-center">
        <a
          href={`/blog/tags`}
          class="text-lg text-text dark:text-text-dark"
          class:list={[
            `${
              activeNav === "tags"
                ? "underline decoration-wavy decoration-2 underline-offset-4"
                : ""
            }`,
          ]}
        >
          Tags
        </a>
      </li>
      <button
        id="theme-toggle"
        class="focus-outline flex gap-2 p-2 sm:p-1"
        title="Toggles light & dark"
        aria-label="auto"
        aria-live="polite"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          id="moon-svg"
          class="hidden h-6 w-6 scale-125 fill-text-dark hover:rotate-12 hover:fill-accent-dark dark:block sm:scale-100"
        >
          <path
            d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z"
          ></path>
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          id="sun-svg"
          class="h-6 w-6 scale-125 fill-text hover:rotate-12 hover:fill-accent-dark dark:hidden sm:scale-100"
        >
          <path
            d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"
          ></path>
        </svg>
      </button>
    </ul>
  </nav>
  <Hr />
</header>

<style>
  nav ul li a {
    @apply w-full px-4 py-3 text-center font-semibold hover:text-accent-dark sm:my-0 sm:px-2 sm:py-1;
  }
</style>

<script is:inline>
document.getElementById("theme-toggle").addEventListener("click", () => {
  const element = document.documentElement;
  element.classList.toggle("dark");

  const isDark = element.classList.contains("dark");
  localStorage.setItem("theme", isDark ? "dark" : "light");
});
</script>
