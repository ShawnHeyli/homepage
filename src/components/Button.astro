---
const { link } = Astro.props;
---

<a href={link} class="md:w-max md:px-4 md:py-[0.6rem]">
  <slot />
</a>

<style>
  a {
    transition: all 0.4s ease-in-out;

    font-weight: 500;
    text-decoration: none;
    color: #ff8906;

    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: max-content;

    padding: 0.5rem 1.5rem;

    border: 1px solid #3b3b43;
    border-radius: 0.5rem;

    background-color: #0e0e1093;
  }

  a:hover {
    transition-duration: 0.05s;
    color: #ff971f, 10%;
    background-color: #0e0e1057;
    outline: #ff8906 solid 2px;
    outline-offset: 2px;
  }

  a:active {
    transition-duration: 0.05s;
    outline: #ff8906 solid 2px;
    outline-offset: 4px;
  }
</style>
